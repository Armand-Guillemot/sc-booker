<div style="max-width:800px;margin:0 auto;">
  <div class="spacer"></div>
  <h1>Reservations</h1>
  <div class="spacer"></div>
  <% @reservations.where.not(status: 0).each do |reservation| %>
    <% property = reservation.property %>
    <div style="    padding: 20px;
    box-shadow: rgb(0 0 0 / 35%) 0px 5px 15px;
    border-radius: 10px;margin-bottom:20px;">
      <div style="display: flex;
    align-items: center;
    justify-content: space-between;">
        <div style="    display: flex;
    align-items: center;
    justify-content: center;gap:10px;">
          <%= cl_image_tag property.main_photo.key, :crop=>"fill", :quality=>"auto", style:"width:40px;height:40px;border-radius:500px;box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;" %>
          <p style="font-weight:bold;margin-bottom:0;"><%= reservation.property.name %></p>
        </div>
        <div class="">
          <p style="margin-bottom:0;">
            <i class="fas fa-moon"></i>
            <%= reservation.days %>
          </p>
        </div>
        <div class="">
          <p style="margin-bottom:0;">
            <i class="fas fa-users"></i>
            <%= reservation.guest_count %>
          </p>
        </div>
        <div>
          <p style="margin-bottom:0;">
            <% if reservation.status == 2 %>
              <span style="height: 10px;
    display: inline-block;
    width: 10px;
    border-radius: 50px;
    background: darkgreen;"></span>
              Approved
            <% else %>
              <span style="height: 10px;
    display: inline-block;
    width: 10px;
    border-radius: 50px;
    background: orange;"></span>
              Pending
            <% end %>
          </p>
        </div>
      </div>
      <div style="height:20px;"></div>
      <div style="  display:flex;
  align-items:center;
  justify-content: space-between;
  gap:7.5px;">
        <div style="margin-bottom:0;">
          <div class="">
            Arrival:
          </div>
          <div>
            <i class="fas fa-calendar"></i>
            <%= reservation.start_date.strftime("%B %d, %Y") %>
          </div>
          <div>
            <i class="fas fa-clock"></i>
            <%= reservation.start_date.strftime("%H:%M") %>
          </div>
        </div>
        <div style="margin-bottom:0;">
          <div class="">
            Departure:
          </div>
          <div>
            <i class="fas fa-calendar"></i>
            <%= reservation.end_date.strftime("%B %d, %Y") %>
          </div>
          <div>
            <i class="fas fa-clock"></i>
            <%= reservation.end_date.strftime("%H:%M") %>
          </div>
        </div>
        <div class="">
          <% if current_user.admin && reservation.status == 1 %>
            <%= link_to '<i class="fas fa-calendar-plus"></i> Approve'.html_safe, approve_reservation_path(reservation), class:"btn btn-success", style:"display: block;margin-bottom: 5px;", data:{ disable_with: "Processing..." } %>
          <% end %>
          <%= link_to '<i class="fas fa-times"></i> Cancel'.html_safe, cancel_reservation_path(reservation), class:"btn btn-secondary", style:"width:100%;", data:{ confirm: "Are you sure?", disable_with: "Processing..." } %>
        </div>
      </div>
    </div>
  <% end %>
</div>